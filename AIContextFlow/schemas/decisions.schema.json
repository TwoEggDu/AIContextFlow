{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "decisions.json",
  "type": "object",
  "required": [
    "schema_version",
    "adrs"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "adrs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "status",
          "path"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^ADR-\\d{3,}$"
          },
          "title": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "proposed",
              "accepted",
              "rejected",
              "superseded"
            ]
          },
          "path": {
            "type": "string"
          },
          "supersedes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}