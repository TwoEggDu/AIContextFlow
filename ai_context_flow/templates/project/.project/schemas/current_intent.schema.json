{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "current_intent.json",
  "type": "object",
  "required": [
    "schema_version",
    "goal"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "session": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "created_at": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "expires": {
          "type": "string",
          "enum": [
            "soft",
            "hard"
          ]
        }
      },
      "additionalProperties": true
    },
    "goal": {
      "type": "object",
      "required": [
        "summary"
      ],
      "properties": {
        "summary": {
          "type": "string"
        },
        "success_criteria": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "scope": {
      "type": "object",
      "properties": {
        "in_scope": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "out_of_scope": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "constraints": {
      "type": "object",
      "properties": {
        "hard": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "soft": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "open_questions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "do_not_do": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "deliverables": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "path"
        ],
        "properties": {
          "type": {
            "type": "string"
          },
          "path": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}